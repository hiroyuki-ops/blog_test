<div class="container">
	<div class="col-md-4 margin-top-5per article-back">

        <% if @article.image_id.present? %>
          <%= image_tag attachment_url(@article, :image), class: 'article-image padding-top-15' %>
        <% end %>

		<h1 class="text-center"><%= @article.title %></h1>
		<div class="padding-bottom-15">
		  <p class="title"><%= @article.title %></p>
		  <span class="text-right">
		  	<%= @article.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
		  </span>
		</div>
		<%= link_to '編集', edit_article_path(@article), class: 'btn btn-primary', style: 'margin-bottom: 10px' %>
		<%= link_to '削除', article_path(@article), method: :delete, data: {confirm: '削除してもよろしいですか？'}, class: 'btn btn-danger', style: 'margin-bottom: 10px' %>
	</div>
</div>
